<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Teacher List</title>

</head>
<body>
    <h2>All Teachers Data</h2>
    
    <table>
        <tr>
          <th>id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Option</th>
        </tr>
        <% teachers.forEach(function(teacher) { %>
            <tr>
               <td> <%= teacher.id %></td>
               <td> <%= teacher.first_name %></td>
               <td> <%= teacher.last_name %></td>
               <td> <%= teacher.email %></td>

               <% if(teacher.SubjectId == null){ %>
                <td> unassigned </td>
               <% } else {%>
                <td><%= teacher.Subject.subject_name %></td>
               <% } %>
               <td><a href="/teacher/edit/<%= teacher.id %>">Edit</a></td>
			   <td><a href="/teacher/delete/<%= teacher.id%>" onclick="return confirm('Are you sure?')">Delete</td>
             </tr>

        <% }) %>
        
      </table>
      <br>
      <ul>
            <li><a href="/teacher/add">Add Teacher</a></li>
        </ul>

</body>
</html>