<!DOCTYPE html>
<html>

<head>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
</head>

<body>

  <h2>All Teachers Data</h2>

  <table>
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Options</th>
    </tr>

    <body>
      <% teachers.forEach(function(el) { %>
        <tr>
          <td>
            <%= el.id %>
          </td>
          <td>
            <%= el.firstName %>
          </td>
          <td>
            <%= el.lastName %>
          </td>
          <td>
            <%= el.email %>
          </td>
          <% if (el.Subject) { %>
            <td>
              <%= el.Subject.subjectName %>
            </td>
            <% }else{ %>
              <td>unassigned</td>
              <% } %>
                <td>
                  <a href='/teachers/edit/<%= el.id %>'>edit</a> |
                  <a href='/teachers/edit/<%= el.id %>'>delete</a>
                </td>
        </tr>
        <% }) %>
  </table>
  </body>
</body>

</html>
