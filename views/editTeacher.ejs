<!DOCTYPE html>
<html lang="en">

<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
  <% if(typeof error !== 'null') { %>
    <p>
      <%= error %>
    </p>
    <% } %>
      <div class="container">
        <h2>Teacher Data Edit</h2>
        <form action="/teachers/edit/<%= teacher.id%>" method='POST'>
          <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="firstName" class="form-control" name="firstName" placeholder="First Name" value="<%= teacher.firstName%>">
          </div>
          <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="lastName" class="form-control" name="lastName" placeholder="Last Name" value="<%= teacher.lastName%>">
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" placeholder="Email" value="<%= teacher.email%>">
          </div>
          <div class="form-group">
            <label for="SubjectId">Subject:</label>
          <select name='SubjectId'>
            <% if(!teacher.SubjectId) { %>
              <option>-- Subject Option --</option>
              <% } %>
              <% subjects.forEach(function(elemen) { %>
                <% if(elemen.id == teacher.SubjectId) { %>
                  <option value="<%= elemen.id %>"><%= elemen.subjectName %></option>
                <% } %>
                <% }) %>
                <% subjects.forEach(function(el) { %>
                  <option value="<%= el.id%>"><%=el.subjectName %></option>
                <% }) %>
              </select>
            <div>
            </div>
          </div>
          <button type="submit" onclick="alert('Your FUCKING data is up to date BITCH!!!')">Fuck Me!</button>
        </form>
      </div>

</body>

</html>
