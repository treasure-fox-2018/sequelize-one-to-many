<html>
  <head>
    <title>Teachers Data</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }
        
        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
    </style>
  </head>
  <body>
    <h2><a href="/">Home</a></h2>
    <br>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th colspan = "2">Options</th>
      </tr>
    </thead>
    <tbody>
      <% teachers.forEach(teacher => { %>
      <tr>
        <td><%= teacher.id %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.email %></td>
        <td><%= teacherHelper(teacher) %></td>
        <td><a href="/teachers/edit/<%= teacher.id %>">Edit</a></td>
        <td><a href="/teachers/delete/<%= teacher.id %>">Delete</a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <br>
  <h2><a href="/teachers/add">Add Teacher Data</a></h2>
  </body>
</html>