<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Register Teacher</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
    <h1>Register Teacher</h1>

    <% if (typeof err !== 'undefined') { %> <!-- for check err if not equal undefined that's will display-->
        <h2 style="color:firebrick"><%= err %></h2>
    <% } %>
    <form action="/teacher/add" method="post">
        First name:<br>
        <input type="text" name="firstname" placeholder="firstname">
        <br>
        Last name:<br>
        <input type="text" name="lastname" placeholder="lastname">
        <br>
        Email:<br>
        <input type="text" name="email" placeholder="example@mail.com">
        <br>
        <br>
        SubjectId:<br>
        <select name="SubjectId">
            <% subject.forEach(function(dataSubject) { %>
                <option value="<%- dataSubject.id %>"> <%-dataSubject.name %> </option>
           <% }) %>
        </select>
        <br>
        <br><br>
        <input type="submit" value="Submit">
    </form> 
</body>
</html>