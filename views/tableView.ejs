<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
  <!--<style>
    table,th,td {
      border: 1px solid black;
      border-collapse: collapse;
    }
  </style>-->
  <title><%= category %></title>
</head>
<body>
  <div class="container">
    <div id="navbar">
      Table: 
      <a href="/students">Students</a> | 
      <a href="/teachers">Teachers</a> | 
      <a href="/subjects">Subjects</a>
    </div>
    <br>
    <input type="button" value="Add new <%= category %>" onclick="location.href='/<%= category %>s/add'">
    <br><br>
    <% if (category === 'subject') { %>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Subject name</th>
            <th>Teacher</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(subject => { %>
          <tr>
            <td><%= subject.id %></td>
            <td><%= subject.subject_name %></td>
            <td>
              <% if (subject.Teachers.length !== 0) { %>
                <% for (let i = 0; i < subject.Teachers.length; i++) { %>
                  <%= `${i+1}. ${subject.Teachers[i].first_name} ${subject.Teachers[i].last_name}` %>
                  <br>
                <% } %>
              <% } %>
            </td>
            <td>
                <a href="/subjects/edit/<%= subject.id %>">Edit</a> | 
                <a href="/subjects/delete/<%= subject.id %>">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <table class="table">
        <tr>
          <th>ID</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <% if (category === 'teacher') { %>
            <th>Subject name</th>
          <% } %>
          <th>Actions</th>
        </tr>
        <% data.forEach(instance => { %>
        <tr>
          <td><%= instance.id %></td>
          <td><%= instance.first_name %></td>
          <td><%= instance.last_name %></td>
          <td><%= instance.email %></td>
          <% if (category === 'teacher') { %>
            <td><%= instance.Subject === null ? 'unassigned' : instance.Subject.subject_name %></td>
          <% } %>
          <td>
              <a href="/<%= category %>s/edit/<%= instance.id %>">Edit</a> | 
              <a href="/<%= category %>s/delete/<%= instance.id %>">Delete</a>
          </td>
        </tr>
        <% }) %>
      </table>
    <% } %>
  </div>
</body>
</html>