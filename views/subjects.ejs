<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge"> -->
    <title>Subjects Data</title>
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1"> -->
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <!-- <script src="main.js"></script> -->
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <table border="2">
        <tr>
            <th>ID</th>
            <th>Subject Name</th>
            <th>Teachers</th>
            <th>Options</th>
        </tr>
        <% subjectsData.forEach(subject => { %>
            <tr>
                <td>
                    <%= subject.id %>
                </td>
                <td>
                    <%= subject.subjectName %>
                </td>
                <td>
                    <!-- <ol> -->
                        <% subject.Teachers.forEach(teacherdata => { %>
                            <li style="list-style-type: none;">
                                <%= teacherdata.firstName %>
                                <%= teacherdata.lastName %>
                            </li>
                        <% }) %>
                    <!-- </ol> -->
                </td>
                <td>
                    <a href="/subjects/edit/<%=subject.id%>">Edit</a> ||
                    <a href="/subjects/delete/<%=subject.id%>" onclick="return confirm('Are you sure you want to delete this subject?')"> Delete</a>
                </td>
            </tr>
            <% }) %>
    </table>
    <br>
    <br>
    <a href="/">Back to Home</a>
    <a href="/subjects/add">Add Subject</a>
</body>

</html>