<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
      <table>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th colspan="2">Options</th>
        </tr>
        <% teachers.forEach(teacher =>{%>
        <tr>
          <td><%= teacher.id %></td>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <% if(!teacher.SubjectId){%>
            <td>unassigned</td>
          <%}else{%>
            <td><%= teacher.Subject.name %></td>
          <%}%>
          <td><a href="/teacher/edit/<%= teacher.id%>">Edit</a></td>
          <td><a href="/teacher/delete/<%= teacher.id%>">Delete</a></td>
        </tr>
        <%})%>
      </table>
      <br>
      <button type="button" name="button" onclick="window.location.href='/teacher/add'">Add Teacher</button>
      <%- include('./partials/links.ejs')%>
  </body>
</html>
